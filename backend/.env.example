# PostgreSQL Database
POSTGRES_DSN=postgresql+asyncpg://infraal:infraal@localhost/infraal

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Ollama LLM
OLLAMA_API_URL=http://192.168.200.201:11434
OLLAMA_MODEL=llama2

# MCP Server Configurations
# Docker Engine (for container operations)
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_CERT_PATH=
DOCKER_TLS_VERIFY=

# Prometheus Server (for metrics queries)
PROMETHEUS_URL=http://192.168.203.103:8080
PROMETHEUS_TIMEOUT=30

# MCP Server Kubernetes Integration
# Choose Method 1 (Standard I/O) or Method 2 (HTTP)

# Method 1: Standard I/O (local server process)
MCP_KUBERNETES_HTTP_ENABLED=false
MCP_KUBERNETES_PATH=/home/ubuntu/mcp-servers/mcp-server-kubernetes/dist/index.js

# Method 2: HTTP Transport (remote server)
# MCP_KUBERNETES_HTTP_ENABLED=true
# MCP_KUBERNETES_HTTP_URL=http://192.168.203.103:8080
# MCP_KUBERNETES_TRANSPORT=streamable  # or "sse"

# Legacy Direct Kubernetes API (alternative to MCP server)
KUBECONFIG=
KUBERNETES_API_SERVER=https://192.168.203.103:16443
KUBERNETES_TOKEN=your-k8s-token-here
KUBERNETES_CA_CERT=

# Alternative Kubernetes connection (if using node port or different port)
# For this InfraAI setup, use port 6443 for secure API, not 3001
# 3001 is used by the frontend in this application

# VMware ESXi MCP Integration
# Method 2: HTTP Transport (recommended for ESXi MCP server)
MCP_ESXI_HTTP_ENABLED=true
MCP_ESXI_HTTP_URL=http://192.168.203.103:8083
MCP_ESXI_TRANSPORT=streamable

# Legacy VMware vSphere direct API (alternative)
VMWARE_HOST=
VMWARE_USER=
VMWARE_PASSWORD=
VMWARE_PORT=443

# Grafana Server (future extension)
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=

# API Security
INFRAAL_API_KEY=your-secret-key-here

# Server Port
PORT=8001
